<% if @user_role == :owner %>
<div style="width:100%;padding-top:3em;padding-left:10%;padding-right:10%">
    <h1 style="color:white">All RSVPs for <%= @event.title %></h1>
    <table style="color:white" class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Role</th>
                <th scope="col">Attending</th>
            </tr>
        </thead>
        <tbody>
            <% @rsvps.each.with_index(1) do |rsvp, index| %>
                <tr>
                    <th scope="row"><%= index %></th>
                    <td><%= rsvp.name.titleize %></td>
                    <td><%= rsvp.email %></td>
                    <td><%= rsvp.event_user_datum.user_role %></td>
                    <td><%= rsvp.event_user_datum.attending %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <div>
        <% if @rsvps.size > 0 %>
            <%= link_to 'Edit', edit_user_event_rsvp_list_path(@event), :class => 'btn btn-outline-light' %>
        <% else %>
            <%= link_to 'Add', new_event_rsvp_path(@event), :class => 'btn btn-outline-light' %>
        <% end %>
        <%= link_to 'Back', user_events_path(current_user.id), :class => 'btn btn-outline-light' %>
        <% if @user.nil? %>
            <%= link_to 'Export as CSV', export_event_rsvps_path, :class => 'btn btn-outline-light' %>
        <% elsif %>
            <%= link_to 'Export as CSV', export_user_event_rsvps_path(current_user.id), :class => 'btn btn-outline-light' %>
        <% end %>
    </div>

</div>
<% end %>
